<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class="card-body">
<form action="/prod/editprod/{{prodamod._id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="formulario">
        <label for="descripcion" class="formulario__label"><h5>Descripción</h5></label>
            <div class="form-group">
            <input type="text" name="descripcion" class="form-control" value="{{prodamod.descripcion}}" required>
            </div>
    </div>
    <div class="formulario">
        <label for="categoria" class="formulario__label"><h5>Categoría</h5></label>
        <div class="form-group">
        <input type="text" name="categoria" class="form-control" value="{{prodamod.categoria}}" required>
        </div>
    </div>

    <div class="formulario">
        <label for="valor" class="formulario__label"><h5>Valor Unitario</h5></label>
        <div class="form-group">
        <input type="number" name="valorUnitario" class="form-control" value="{{prodamod.valorUnitario}}" required>
         </div>
    </div>

    <div class="formulario">
    <label for="estado" class="formulario__label"><h5>Estado</h5></label> 
    <div class="form-group">
    <input type="text" name="estado" class="form-control" value="{{prodamod.estado}}" required>
    </div>
    </div>
    <div> &nbsp;</div>

    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">
            Actualizar
        </button>
    </div>

</form>
        </div>
    </div>
</div>