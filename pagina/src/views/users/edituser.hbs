<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Usuario</h3>
        </div>
        <div class="card-body">
<form action="/users/edituser/{{useramod._id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="formulario">
        <label for="nombre" class="formulario__label"><h5>Nombre</h5></label>
            <div class="form-group">
            <input type="text" name="nombre" class="form-control" value="{{useramod.nombre}}">
            </div>
    </div>
    <div class="formulario">
        <label for="email" class="formulario__label"><h5>Email</h5></label>
        <div class="form-group">
        <input type="email" name="email" class="form-control" value="{{useramod.email}}">
        </div>
    </div>

      <div class="formulario">
        <label for="password" class="formulario__label"><h5>Password</h5></label>
        <div class="form-group">
        <input type="password" name="password" class="form-control" value="{{useramod.password}}" >
        </div>
    </div>


    <div class="formulario">
        <label for="rol" class="formulario__label"><h5>Rol</h5></label>
        <div class="form-group">
        <input type="text" name="rol" class="form-control" value="{{useramod.rol}}">
         </div>
    </div>

    <div class="formulario">
    <label for="estado" class="formulario__label"><h5>Estado</h5></label> 
    <div class="form-group">
    <input type="text" name="estado" class="form-control" value="{{useramod.estado}}">
    </div>
    </div>
    <div> &nbsp;</div>

    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">
            Actualizar
        </button>
    </div>

</form>
        </div>
    </div>
</div>